# Nexus - GitHub Plugin .gitignore

# User-specific configuration
config/user-preferences.yml
config/*.local.yml

# Runtime state
.nexus-state/
state/*.json
runs/**/*.json

# User data (should not be in repo)
memory/projects/*.json
memory/patterns.json

# Logs
*.log
logs/

# OS files
.DS_Store
Thumbs.db
desktop.ini

# IDE
.vscode/
.idea/
*.swp
*.swo
*~

# Temporary files
*.tmp
*.temp
.cache/

# Node modules (if any JS tooling added later)
node_modules/

# Python cache (if any Python tooling added later)
__pycache__/
*.pyc
*.pyo

# Keep template files but not user copies
!memory/projects/.gitkeep
!config/user-preferences.template.yml

# Keep structure folders
!templates/
!docs/
